<h1>New Booking</h1>

<p><strong>Host:</strong> <%= @destination.user.first_name %></p>
<p><strong>Address:</strong> <%= @destination.address %></p>
<p><strong>Price per night:</strong> <%= @destination.price %></p>

<%= form_with(model: [@destination, @booking]) do |form| %>

  <div>
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.submit 'Create Booking' %>
  </div>
<% end %>


 <%= link_to "Back", destinations_path %>
